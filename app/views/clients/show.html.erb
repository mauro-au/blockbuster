<div class="d-flex justify-content-center">
  <div class="col-md-6 py-2">
    <p style="color: green"><%= notice %></p>

    <%= render @client %>

    <div class="d-flex justify-content-center">
      <%= link_to "<", clients_path, class: 'btn btn-outline-primary m-2' %>
      <%= link_to "Editar Cliente", edit_client_path(@client), class: 'btn btn-outline-primary m-2' %>
      <%= button_to "Eliminar Cliente", @client, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger m-2' %>
    </div>
  </div>
</div>