<% if controller.controller_name == 'movies' && controller.action_name == 'index' %>
  <div class="col-md-4 py-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <%= link_to "Show this movie", movie, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% elsif controller.controller_name == 'movies' && controller.action_name == 'show' %>
  <div class="col-md-12 py-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
      </div>
    </div>
  </div>
<% end %>
