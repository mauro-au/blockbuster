<div class="d-flex justify-content-center">
  <div class="col-md-6 py-2">
    <p style="color: green"><%= notice %></p>

    <%= render @movie %>


    <div class="d-flex justify-content-center">
      <%= link_to "<", movies_path, class: 'btn btn-outline-primary m-2' %>
      <%= link_to "Editar Pelicula", edit_movie_path(@movie), class: 'btn btn-outline-primary m-2' %>
      <%= button_to "Eliminar Película", @movie, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger m-2' %>
    </div>
  </div>
</div>
