<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block", class:"form-label mt-3" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div>
    <%= form.label :age, style: "display: block", class:"form-label mt-3" %>
    <%= form.text_field :age, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :movie_id, style: "display: block", class:"form-label mt-3" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, {}, { class: "form-select" } %>
  </div>

  <div>
    <div class="d-flex justify-content-center">
      <%= link_to "<", clients_path, class: 'btn btn-outline-primary m-2' %>
      <% if action_name == 'edit' %>
        <%= link_to "Mostrar Cliente", @client, class: 'btn btn-outline-primary m-2' %>
      <% end %>
      <%= form.submit class: "btn btn-primary m-2" %>
    </div>
  </div>
<% end %>
