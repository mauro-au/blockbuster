<div id="<%= dom_id client %>">
  <% if controller.action_name == 'index' %>
    <tr>
      <th scope="row"><%= client.id %></th>
      <td><%= client.name %></td>
      <td><%= client.age %></td>
      <td><%= client.movie ? client.movie.title : "Sin película" %></td>
        <td><%= link_to "Mostrar Cliente", client, class: 'btn btn-primary' %></td>
    </tr>
  <% else %>
    <div class="card text-bg-light mb-3 mt-5">
      <h1 class="card-header text-center"><%= client.name %></h1>
      <div class="card-body">
        <p class="card-text"><b>Edad: </b><%= client.age %></p>
        <p class="card-text"><b>Película: </b><%= client.movie ? client.movie.title : "Sin película" %></p>
      </div>
    </div>
  <% end %>
</div>
